{
  "manifest_version": 2,

  "name": "Reftool5 Chrome extension",
  "description": "This extension enables import of documents directly from the browser",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab" //, "tabs", "http://*/*", "https://*/*"
  ]
}
